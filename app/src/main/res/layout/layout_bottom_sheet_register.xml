<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="#E0E0E0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="Welcome to Unitask"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="Let's work"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:textStyle="normal" />
    <EditText
        android:id="@+id/etRegisterName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_input_field"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_hint"
        android:hint="Enter Name"
        android:paddingHorizontal="16dp" />

    <EditText
        android:id="@+id/etRegisterEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_input_field"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_hint"
        android:hint="Enter Email"
        android:paddingHorizontal="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:hintEnabled="false"

        app:endIconMode="password_toggle"
        app:endIconDrawable="@drawable/ic_password_eye_selector"
        app:endIconTint="@color/text_gray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_hint"
            android:paddingHorizontal="16dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_hint"
            android:paddingHorizontal="16dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegisterSubmit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/bg_button_gradient"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
